{
  "name": "@ai/mcp-server",
  "type": "module",
  "version": "1.0.0",
  "description": "a mcp server",
  "main": "src/index.ts",
  "module": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "dev": "npm-run-all --parallel --print-label mcp:dev mcp:debug",
    "mcp:dev": "tsx ./src/index.ts",
    "mcp:debug": "mcp-inspector http://localhost:3127/mcp",
    "type-check": "tsc --noEmit",
    "lint": "eslint --fix",
    "test": "vitest",
    "build": "tsc",
    "serve": "chmod 755 dist/index.js && node ./dist/index.js",
    "kill": "kill -9 $(lsof -ti:3127)"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "catalog:prod",
    "express": "catalog:prod",
    "zod": "catalog:prod"
  },
  "devDependencies": {
    "@ai/typescript-config": "workspace:*",
    "@modelcontextprotocol/inspector": "catalog:dev",
    "@types/express": "catalog:types",
    "@types/node": "catalog:types",
    "tsx": "catalog:dev",
    "typescript": "catalog:dev",
    "vitest": "catalog:test"
  }
}
